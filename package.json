{
  "name": "ecommerce-node-express-ts",
  "version": "1.0.0",
  "description": "The e-Commerce application built with Node.js - Express.JS and TypeScript",
  "license": "ISC",
  "author": "Khang Nguyen",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "check:all": "npm run typecheck && npm run lint && npm run format:check",
    "fix:all": "npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "mongoose": "^9.1.5",
    "morgan": "^1.10.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/cz-commitlint": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/http-status-codes": "^1.2.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "keywords": [
    "nodejs",
    "express.js",
    "typescript"
  ],
  "homepage": "https://github.com/ngkhang/ecommerce-node-express-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngkhang/ecommerce-node-express-ts.git"
  }
}
